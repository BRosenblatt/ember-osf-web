<div local-class='Top'>
    <p local-class='Top__explanation'>
        {{t 'settings.tokens.explanation'}}
    </p>

    {{#link-to
        data-test-create-token-link
        'settings.tokens.create'
        class='btn btn-primary'
    }}
        {{t 'settings.tokens.createToken'}}
    {{/link-to}}
</div>

{{#paginated-list/all
    data-test-token-list
    modelName='token'
    initialCount=10
    analyticsScope='Settings - Tokens'
    reload=this.reloadList
    as |list|
}}
    {{#list.item as |token|}}
        {{settings/tokens/x-token-card
            token=token
            deleted=(action (mut this.reloadList) true)
        }}
    {{/list.item}}

    {{#list.empty}}
        <div local-class='EmptyList' data-test-no-tokens>
            {{t 'settings.tokens.emptyList'}}
        </div>
    {{/list.empty}}
{{/paginated-list/all}}