{{#if this.modalShown}}
    {{#bs-modal-simple
        open=this.modalShown
        disabled=this.deleteTokenTask.isRunning
        onSubmit=(perform this.deleteTokenTask)
        onClose=(action this.hide)
        title=(t 'settings.tokens.confirmDelete.title' tokenName=this.token.name)
        submitTitle=(t 'settings.tokens.deleteToken')
        closeTitle=(t 'general.cancel')
    }}
        {{t 'settings.tokens.confirmDelete.body'}}
    {{/bs-modal-simple}}
{{/if}}

{{#if hasBlock}}
    {{yield (hash
        show=(action this.show)
        hide=(action this.hide)
        disabled=this.buttonDisabled
    )}}
{{else}}
    {{#bs-button
        type='danger'
        onClick=(action this.show)
        disabled=this.buttonDisabled
    }}
        {{t 'settings.tokens.deleteToken'}}
    {{/bs-button}}
{{/if}}
