        {{/modal.body}}
        {{#modal.footer}}
            {{#bs-button onClick=(action 'closeModal') type='default'}}Cancel{{/bs-button}}
            {{#bs-button onClick=(action 'createNode') type='success'}}Create{{/bs-button}}
        {{/modal.footer}}
