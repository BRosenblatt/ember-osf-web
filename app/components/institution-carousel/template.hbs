{{! template-lint-disable bare-strings }}
<div id='__carousel' class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" role="listbox">
        {{#each slides as |slide index|}}
            <div class={{if (not index) "item active" "item"}}>
                {{#each slide as |institution index|}}
                    <div class="{{if (not index) (concat "col-sm-2 " columnOffset) "col-sm-2"}} institution-item">
                        <a href="/institutions/{{institution.id}}" class="thumbnail">
                            <img class="img-circle img-responsive" name={{institution.title}} logopath="/static/img/institutions/shields-rounded-corners/{{institution.id}}-shield-rounded-corners.png" src="/static/img/institutions/shields-rounded-corners/{{institution.id}}-shield-rounded-corners.png" alt="{{institution.title}}" title="{{institution.title}}">
                        </a>
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
    {{#if (gt institutions.length itemsPerSlide)}}
        <a href="#__carousel" role='button' data-slide="prev" class="left carousel-control institution-carousel">{{fa-icon 'angle-left'}}</a>
        <a href="#__carousel" role='button' data-slide="next" class="right carousel-control institution-carousel">{{fa-icon 'angle-right'}}</a>
    {{/if}}
</div>
