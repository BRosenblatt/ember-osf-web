{{! template-lint-disable bare-strings }}
<div id='__carousel' class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" role="listbox">
        {{#each slides as |slide index|}}
            <div class={{if (not index) "item active" "item"}}>
                {{#each slide as |institution index|}}
                    <div class={{if (not index) (concat "col-sm-2 " columnOffset) "col-sm-2"}} style="display: inline-block; float: none;">
                        <a href="/institutions/{{institution.id}}" class="thumbnail" style="background: inherit; border: none;">
                            <img class="img-circle img-responsive" name={{institution.title}} logopath="/static/img/institutions/shields-rounded-corners/{{institution.id}}-shield-rounded-corners.png" src="/static/img/institutions/shields-rounded-corners/{{institution.id}}-shield-rounded-corners.png" alt="{{institution.title}}" title="{{institution.title}}" style="background-color: white;">
                        </a>
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
    {{#if (gt institutions.length itemsPerSlide)}}
        <a href="#__carousel" data-slide="prev" class="left carousel-control" style="padding-top: 20px; font-size: 50px; width: 5%; background-image: none;">‹</a>
        <a href="#__carousel" data-slide="next" class="right carousel-control" style="padding-top: 20px; font-size: 50px; width: 5%; background-image: none;">›</a>
    {{/if}}
</div>
