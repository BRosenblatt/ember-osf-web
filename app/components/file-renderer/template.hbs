{{#if download}}
    {{#if showLoadingIndicator}}
        {{loading-indicator dark=true}}
    {{/if}}
    <iframe
        src={{mfrUrl}}
        width={{width}}
        title={{t 'file_detail.mfr_iframe_title'}}
        height={{height}}
        scrolling="yes"
        marginheight="0"
        frameborder="0"
        allowfullscreen={{allowfullscreen}}
        class={{if showIframe 'show' 'hidden'}}
        onload={{action 'loaded'}}
    >
    </iframe>
{{/if}}
