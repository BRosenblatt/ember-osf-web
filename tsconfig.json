{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "ember-osf-web/tests/*": ["tests/*"],
      "ember-osf-web/*": ["app/*"],
      "npm:*": ["node_modules/*"],
      "ember-bootstrap/components/*": [
        "node_modules/ember-bootstrap/addon/components/bs3/*",
        "node_modules/ember-bootstrap/addon/components/bs4/*"
      ]
    },
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "config",
    "tests",
    "types"
  ]
}
