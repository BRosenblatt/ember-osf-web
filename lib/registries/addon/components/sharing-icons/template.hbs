{{#let (hash
    twitter=(component 'sharing-icons/sharing-anchor'
        href=this.twitterHref
        medium='Twitter'
        analyticsLabel='Content - tweet'
        icon='twitter-square'
        showText=@showText
    )
    linkedin=(component 'sharing-icons/sharing-anchor'
        href=this.linkedinHref
        medium='Linkedin'
        analyticsLabel='Content - share'
        icon='linkedin-square'
        showText=@showText
    )
    facebook=(component 'sharing-icons/sharing-anchor'
        href=this.facebookHref
        medium='Facebook'
        analyticsLabel='Content - share'
        icon='facebook-square'
        showText=@showText
    )
    email=(component 'sharing-icons/sharing-anchor'
        href=this.emailHref
        medium='Email'
        analyticsLabel='Content - email'
        icon='envelope'
        showText=@showText
    )) as |links|}}
    {{#if this.hasBlock}}
        {{yield links}}
    {{else}}
        {{links.twitter}}
        {{links.linkedin}}
        {{links.facebook}}
        {{links.email}}
    {{/if}}
{{/let}}
