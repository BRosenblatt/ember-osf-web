{{#if (not this.isDisabled)}}
    <ResponsiveDropdown @disabled={{this.isDisabled}} as |dd|>
        {{#dd.trigger local-class=(concat 'Menu__button ' (if this.isDisabled 'disabled' ''))}}
            {{registries-states/actions-trigger
                  currentState=@currentState
                  isAdmin=@isAdmin
                  isOpen=dd.isOpen
                  isDisabled=this.isDisabled
            }}
        {{/dd.trigger}}
        {{#dd.content local-class='States'}}
            {{#if (eq this.currentState 'public')}}
                {{registries-states/is-public node=@node closeDropdown=dd.close}}
            {{else}}
                {{registries-states/is-embargoed node=@node closeDropdown=dd.close}}
            {{/if}}
        {{/dd.content}}
    </ResponsiveDropdown>
{{else}}
    {{registries-states/actions-trigger currentState=@currentState isAdmin=@isAdmin isDisabled=this.isDisabled}}
{{/if}}
