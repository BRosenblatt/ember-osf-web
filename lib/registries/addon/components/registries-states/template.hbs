{{#if this.isDisabled}}
    {{registries-states/actions-trigger currentState=@currentState isAdmin=@isAdmin isDisabled=true}}
{{else}}
    <ResponsiveDropdown as |dd|>
        {{#dd.trigger local-class='Menu__button'}}
            {{registries-states/actions-trigger
                  currentState=@currentState
                  isAdmin=@isAdmin
                  isOpen=dd.isOpen
            }}
        {{/dd.trigger}}
        {{#dd.content local-class='States'}}
            {{#if (eq this.currentState 'public')}}
                {{registries-states/is-public node=@node closeDropdown=dd.close}}
            {{else}}
                {{registries-states/is-embargoed node=@node closeDropdown=dd.close}}
            {{/if}}
        {{/dd.content}}
    </ResponsiveDropdown>
{{/if}}
