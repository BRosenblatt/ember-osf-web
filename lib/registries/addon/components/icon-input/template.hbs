<span
    local-class='IconInput {{if this.dark 'Dark'}}'
    data-analytics-category='text'
    ...attributes
>
    <span>
        {{fa-icon this.icon fixedWidth=true}}
    </span>
    {{input
        type='text'
        enter=(action '_enter')
        class=(local-class 'Input')
        value=(mut this.value)
    }}
</span>
