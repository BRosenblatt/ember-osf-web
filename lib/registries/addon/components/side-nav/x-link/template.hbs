{{#if this.isButton}}
    <OsfButton
        class={{local-class this.wrapperClasses}}
        data-test-collapsed='{{this.isCollapsed}}'
        @onClick={{@onClick}}
        @type='link'
        ...attributes
    >
        <span local-class='Label'>
            {{fa-icon @icon fixedWidth=true class=(local-class 'Icon')}}
            <h4>{{@label}}</h4>
        </span>

        <span local-class='Count'>
            {{#if this.hasCount}}
                {{@count}}
            {{/if}}
        </span>
    </OsfButton>
{{else}}
    <Link
        @models={{@models}}
        @route={{@route}}
        @href={{@href}}
        @onclick={{@onClick}}
        class={{local-class this.wrapperClasses}}
        data-test-collapsed='{{this.isCollapsed}}'
        ...attributes
    >
        <span local-class='Label'>
            {{fa-icon @icon fixedWidth=true class=(local-class 'Icon')}}
            <h4>{{@label}}</h4>
        </span>

        <span local-class='Count'>
            {{#if this.hasCount}}
                {{@count}}
            {{/if}}
        </span>
    </Link>
{{/if}}
