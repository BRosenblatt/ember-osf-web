{{#if showTooltip}}
    {{bs-tooltip
        title=tooltip
        triggerElement='parentView'
        autoPlacement=true
        viewportSelector=elementId
    }}
{{/if}}
{{#panels.panel
    open=isOpen
    as |panel|
}}
    {{yield (hash
        active=(component 'submit-section/active'
            title=title
            didSave=didSave
            panel=panel
            description=description
        )
        complete=(component 'submit-section/complete'
            showReopen=showReopen
            editSection=(action 'editSection')
        )
    )}}
{{/panels.panel}}