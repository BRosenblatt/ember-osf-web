<InlineList
    @items={{this.formattedContributors}}
    @total={{this.totalContributors}}
    @truncate={{this.truncateCount}}
    as |l|
>
    {{#if l.item}}
        {{~contributor-list/contributor shouldLinkUser=this.shouldLinkUsers contributor=l.item~}}
    {{else if l.remainingCount}}
        {{#if this.loadContributors.isRunning }}
            <LoadingIndicator @inline={{true}} @dark={{true}} />
        {{else if this.truncated}}
            {{~t 'contributor_list.and_x_more' x=l.remainingCount~}}
        {{else}}
            <OsfButton
                data-test-load-more-contribs
                data-analytics-name='Load more contributors'
                aria-label={{t 'contributor_list.more'}}
                local-class='load-contribs'
                @type='link'
                @onClick={{perform this.loadContributors true}}
            >
                {{~t 'contributor_list.and_x_more' x=l.remainingCount~}}
            </OsfButton>
        {{/if}}
    {{/if}}
</InlineList>
