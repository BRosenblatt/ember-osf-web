<InlineList
    @items={{this.contributorList}}
    @truncate={{this.truncate}}
    as |l|
>
    {{#if l.item}}
        {{~contributor-list/contributor useLink=this.useLink contributor=l.item~}}
    {{else if l.truncate}}
        {{#if this.useLink}}
            <OsfLink
                @href='/{{this.nodeId}}'
            >
                {{t 'contributor_list.and_x_more' x=this.rest}}
            </OsfLink>
        {{else}}
            {{~t 'contributor_list.and_x_more' x=this.rest}}
        {{/if}}
    {{/if}}
</InlineList>
