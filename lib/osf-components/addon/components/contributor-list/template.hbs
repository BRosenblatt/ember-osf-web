{{#inline-list items=this.contributorList truncate=this.displayedContribs as |l|}}
    {{#if l.item}}
        {{~contributor-list/contributor useContributorLink=this.useContributorLink contributor=l.item~}}
    {{else if l.truncate}}
        {{#if (and showLoading hasMore loadContributors.isRunning) }}
            {{loading-indicator inline=true dark=dark}}
        {{else}}
            {{#if useShowMoreLink}}
                <button class="btn btn-link" local-class="load-contribs" aria-label={{t 'contributor_list.more'}} onclick={{action 'more'}} data-test-load-more-contribs>
                    {{~t 'contributor_list.and_x_more' x=rest~}}
                </button>
            {{else}}
                {{~t 'contributor_list.and_x_more' x=rest~}}
            {{/if}}
        {{/if}}
    {{/if}}
{{/inline-list}}
{{#if showLess}}
    <button class="btn btn-link" local-class="load-contribs" aria-label={{t 'contributor_list.less.capitalized'}} onclick={{action 'less'}} data-test-show-less-contribs>
        {{~t 'contributor_list.less.lowercase'~}}
    </button>
{{/if}}
