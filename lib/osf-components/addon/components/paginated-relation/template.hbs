{{#if getModelTask.isRunning}}
    {{loading-indicator dark=true}}
{{else if loadItemsTask.isRunning}}
    {{#if usePlaceholders}}
        <ul class="list-group m-md">
            {{#each (range 1 placeholderCount)}}
                {{yield (hash
                    item=(component 'paginated-relation/x-item')
                )}}
            {{/each}}
        </ul>
    {{else}}
        {{loading-indicator dark=true}}
    {{/if}}
{{else if errorShown}}
    <p>{{t 'paginatedRelation.error'}}</p>
{{else if items.length}}
    <ul class="list-group m-md">
        {{#each items as |item index|}}
            {{#unless item.isDeleted}}
                {{yield (hash
                    item=(component 'paginated-relation/x-item' item=item index=index onDelete=(action onDeleteItem))
                )}}
            {{/unless}}
        {{/each}}
    </ul>
    {{simple-paginator
        maxPage=maxPage
        nextPage=(action 'next')
        previousPage=(action 'previous')
        curPage=page
    }}
{{else}}
    {{yield (hash
        empty=(component 'paginated-relation/x-render')
    )}}
{{/if}}