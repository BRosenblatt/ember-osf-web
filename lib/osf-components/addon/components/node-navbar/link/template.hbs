{{#if this.useLinkTo}}
    {{#link-to
        this.routeName
        @node.id
        data-test-node-navbar-link=(or @destination @node.id)
        class=this.extraClasses
    }}
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t this.translatingKey}}
        {{/if}}
    {{/link-to}}
{{else}}
    <OsfLink
        data-test-node-navbar-link={{or @destination @node.id}}
        class={{this.extraClasses}}
        @href='/{{@node.id}}/{{@destination}}'
    >
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t this.translatingKey}}
        {{/if}}
    </OsfLink>
{{/if}}
