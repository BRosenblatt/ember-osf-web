{{#if useLinkTo}}
    {{#link-to
        routeName
        node.id
        class=extraClasses
        data-test-node-navbar-link=(or @destination @node.id)
    }}
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t translatingKey}}
        {{/if}}
    {{/link-to}}
{{else}}
    <a
        href="/{{node.id}}/{{destination}}"
        class={{extraClasses}}
        data-test-node-navbar-link={{or @destination @node.id}}
    >
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t translatingKey}}
        {{/if}}
    </a>
{{/if}}
