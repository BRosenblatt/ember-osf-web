{{#unless hidden}}
    {{#let (hash
        link=(if this.isEmber
            (component 'global-link-to' params=this._params)
            (component 'hyper-link/x-anchor' this.resolvedRoute)
        )
    ) as |ctx|}}
        {{#ctx.link data-test-hyper-link=@testSelectorVal class=@class click=(action this.onclick)}}
            {{#if hasBlock}}
                {{yield}}
            {{else}}
                {{text}}
            {{/if}}
        {{/ctx.link}}
    {{/let}}
{{/unless}}
