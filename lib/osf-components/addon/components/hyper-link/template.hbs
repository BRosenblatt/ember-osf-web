{{#unless hidden}}
    {{#let (hash
        link=(if this.isEmber
            (component 'global-link-to' params=this._params click=(action 'onclick'))
            (component 'hyper-link/x-anchor' this.resolvedRoute onclick=(action 'onclick'))
        )
    ) as |ctx|}}
        {{#ctx.link class=@class data-test-hyper-link=@testSelectorVal}}
            {{#if hasBlock}}
                {{yield}}
            {{else}}
                {{text}}
            {{/if}}
        {{/ctx.link}}
    {{/let}}
{{/unless}}
