<div data-test-institutions-widget>
    <div local-class='InstitutionWidget__title'>
        {{t 'osf-components.institutions-widget.affiliated_institutions'}}
        {{#if (not this.readOnly)}}
            <BsButton 
               aria-label={{t 'general.add'}} 
               class='add'
               @onClick={{action this.showModal}}
            >
                {{fa-icon 'plus-circle'}}
            </BsButton>
        {{/if}}
    </div>
    <span>
        <InstitutionsList @node={{@node}} />
    </span>
    <BsModal @open={{this.shouldShowModal}} as |modal|>
        <modal.header>
            <h3 class='modal-title'>
                {{t 'osf-components.institutions-widget.add_affiliation'}}
            </h3>
        </modal.header>
        <modal.body>
            <div class='text-left'>

            </div>
        </modal.body>
        <modal.footer>
            <BsButton
                class='btn btn-default'
                @onClick={{action this.closeModal}}
            >
                {{t 'general.cancel'}}
            </BsButton>
            <BsButton
                class='btn btn-success'
                @onClick={{action 'create'}}
            >
                {{t 'general.save'}}
            </BsButton>
        </modal.footer>
    </BsModal>
</div>
