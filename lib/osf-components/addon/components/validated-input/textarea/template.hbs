{{#validated-input/x-input-wrapper
    model=this.model
    label=this.label
    valuePath=this.valuePath
    validationStatus=this.validationStatus
    as |inputElementId|
}}
    {{textarea
        (html-attributes aria-label=this.ariaLabel)
        id=inputElementId
        value=this.value
        placeholder=this.placeholder
        class='form-control'
        name=this.valuePath
        disabled=this.disabled
    }}
{{/validated-input/x-input-wrapper}}
