<span class="input-group-btn">
    {{#copy-button
        clipboardText=this.text
        success=(action this._success)
        error=(action this._error)
        class='btn btn-default btn-sm'
        local-class='CopyButton'
        aria-label=(t 'general.clipboard_copy')
    }}
        {{fa-icon 'copy'}}
        {{#if this.hasCopied}}
            {{#bs-tooltip visible=true}}
                {{t 'general.clipboard_copied'}}
            {{/bs-tooltip}}
        {{/if}}
    {{/copy-button}}
</span>
<input
    readonly="true"
    type="text"
    class="form-control"
    local-class="CopyableInput"
    value={{this.text}}
>