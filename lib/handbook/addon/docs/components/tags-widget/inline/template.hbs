<DocsDemo as |demo|>
    <demo.example @name='tags-widget.inline.hbs'>
        <TagsWidget
            @tags={{@tags}}
            @addTag={{action @addTag}}
            @removeTag={{action @removeTag}}
            @showAdd={{this.showAdd}}
            @inline={{true}}
            @analyticsScope='Handbook Tags'
        />
    </demo.example>

    <BsButton
        @class='center-block m-b-lg'
        @onClick={{action (mut this.showAdd) (not this.showAdd)}}
    >
        set: showAdd = {{not this.showAdd}}
    </BsButton>

    <demo.snippet @name='tags-widget.inline.hbs' />
</DocsDemo>
