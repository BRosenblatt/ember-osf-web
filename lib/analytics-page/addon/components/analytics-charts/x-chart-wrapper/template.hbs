<div
    local-class="ChartWrapper {{unless allowEnablingCharts 'DisabledPanel'}}"
    class='panel panel-default'
>
    <div class='panel-heading clearfix'>
        <h3 class='panel-title'>{{t chartSpec.titleKey}}</h3>
    </div>
    <div local-class='ChartContainer' class='panel-body'>
        <div local-class='Chart {{if overlayShown 'Blurred'}}'></div>
        {{#if overlayShown}}
            <div local-class='ChartOverlay'>
                {{#if allowEnablingCharts}}
                    {{#if loading}}
                        {{loading-indicator dark=true}}
                    {{else if keenError}}
                        <p>{{t 'analytics.keenError'}}</p>
                    {{else}}
                        {{#bs-button type='primary' onClick=(action 'enableChart')}}
                            {{t 'analytics.enableChart'}}
                        {{/bs-button}}
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
